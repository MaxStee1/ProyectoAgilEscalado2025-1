generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String

  reservas Reserva[]
}

model Horario {
  id        Int     @id @default(autoincrement())
  dia       String
  hora      String
  reservado Boolean @default(false)

  reserva Reserva? // Relaci√≥n opcional con Reserva (uno a uno)
}

model Reserva {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  horario   Horario @relation(fields: [horarioId], references: [id])
  horarioId Int     @unique
}
